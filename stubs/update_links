#!/bin/sh


PWE_HOME=$1

cd $PWE_HOME

CP=""

for jar in "lib"/*.jar
do
    CP="${PWE_HOME}/$jar:${CP}"
done



cat >/usr/bin/pwe-env <<EOF
#!/bin/sh


PWE_HOME="$1"
PWE_CP="$CP"

if [[ \$1 == "-cp" ]]; then
    # display the classpath
    echo "\${PWE_CP}"
fi

if [[ \$1 == "-home" ]]; then
    echo "\${PWE_HOME}"
fi





EOF

chmod +x /usr/bin/pwe-env

rm /usr/bin/pwe

ln -s "$1/pwe" /usr/bin/pwe
